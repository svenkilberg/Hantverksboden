@model Craft

<div class="card col-sm-4 col-lg-3 col-md-4 mr-2 mb-2">
    <div class="card-body">
        <img src="@Model.ImageThumbnailUrl" class="card-img-top" alt="">
        <div class="card-body">
            <h6 class="card-title">
                <a>@Model.Name</a>
            </h6>
            <p class="card-text">@Model.ShortDescription</p>
        </div>
    </div>
</div>
